rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return resource.data.ownerId == uid;
    }
    
    function getUserRole(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data.role;
    }
    
    function isVet(uid) {
      return getUserRole(uid) == 'vet';
    }
    
    function isSitter(uid) {
      return getUserRole(uid) == 'sitter';
    }
    
    function isOwnerRole(uid) {
      return getUserRole(uid) == 'owner';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read all users (for vet/sitter listings)
      allow read: if isSignedIn();
      
      // Users can only write their own profile
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Pets collection
    match /pets/{petId} {
      // Authenticated users can read pets
      allow read: if isSignedIn();
      
      // Only owners can create pets
      allow create: if isSignedIn() && 
                     isOwnerRole(request.auth.uid) &&
                     request.resource.data.ownerId == request.auth.uid;
      
      // Only the pet owner can update/delete
      allow update, delete: if isSignedIn() && 
                              isOwner(resource.data.ownerId);
    }
    
    // Bookings collection
    match /bookings/{bookingId} {
      // Owners can read their bookings
      // Vets can read bookings where they are the vet
      // Sitters can read bookings where they are the sitter
      allow read: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid ||
        resource.data.vetId == request.auth.uid ||
        resource.data.sitterId == request.auth.uid
      );
      
      // Only owners can create bookings
      allow create: if isSignedIn() && 
                     isOwnerRole(request.auth.uid) &&
                     request.resource.data.ownerId == request.auth.uid;
      
      // Owners can update their bookings
      // Vets can update status for their bookings
      // Sitters can update status for their bookings
      allow update: if isSignedIn() && (
        resource.data.ownerId == request.auth.uid ||
        (resource.data.vetId == request.auth.uid && isVet(request.auth.uid)) ||
        (resource.data.sitterId == request.auth.uid && isSitter(request.auth.uid))
      );
      
      // Only owners can delete bookings
      allow delete: if isSignedIn() && 
                     resource.data.ownerId == request.auth.uid;
    }
    
    // Chats collection
    match /chats/{chatId} {
      // Only participants can read/write
      allow read, write: if isSignedIn() && 
                         request.auth.uid in resource.data.participants;
      
      // Allow creating chats if user is a participant
      allow create: if isSignedIn() && 
                     request.auth.uid in request.resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Only chat participants can read/write messages
        allow read, write: if isSignedIn() && 
                           request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Sender must be authenticated and a participant
        allow create: if isSignedIn() && 
                       request.resource.data.senderId == request.auth.uid &&
                       request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}

