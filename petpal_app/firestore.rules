rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Pets collection
    match /pets/{petId} {
      allow read: if isAuthenticated();
      // Allow create if authenticated and setting correct ownerId
      allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
      // Allow update/delete if user owns the pet
      allow update, delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }

    // Bookings - generic rules for now, can be tightened
    match /vetBookings/{bookingId} {
      allow read, write: if isAuthenticated();
    }
    
    match /sitterBookings/{bookingId} {
      allow read, write: if isAuthenticated();
    }

    match /activityLogs/{logId} {
      allow read, write: if isAuthenticated();
    }
  }
}
